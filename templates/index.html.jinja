{% extends "base.html.jinja" %}
{%block content %}
    <div class="px-4 py-5 text-center">
      <h1><a href="/" class="text-decoration-none text-reset">Free SPF & DMARC Checker | {{ site_title }}</a></h1>
      <p class="lead">
        Check a domain for DNSSEC, SPF, DMARC, and more. Powered by
        <a href="https://domainaware.github.io/checkdmarc">checkdmarc</a>.
      </p>
    </div>
    <main class="container" role="main">
      <div class="row justify-content-center">
        <div class="col-sm-4">
          <form method="post" class="input-group">
            <input type="text" name="domain" class="form-control form-control-lg" id="domain" required
              placeholder="example.com">
            <button type="submit" class="btn btn-large btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </main>
{% endblock %}