{% extends "page.html.jinja" %}
{% set page = 'home' %}
{% set title = "Check SPF, DMARC & more for free" %}
{%block content %}
<div class="px-4 py-5 text-center">
  <p class="lead">
    Check a domain for DNSSEC, SPF, DMARC, and more for free. <br>
    No sales pitch. Powered by <a href="https://domainaware.github.io/checkdmarc">checkdmarc</a>.
  </p>
</div>
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <form method="post" class="input-group">
        <input type="text" name="domain" class="form-control form-control-lg" id="domain"
        required="" placeholder="example.com" autocomplete="url" autocorrect="off"
        autocapitalize="off" spellcheck="off">
        <button type="submit" class="btn btn-large btn-primary">Submit</button>
      </form>
    </div>
  </div>
{% endblock %}