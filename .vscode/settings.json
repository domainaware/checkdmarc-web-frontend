{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",

    // Let Ruff handle lint fixes + import sorting on save
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "editor.formatOnSave": true,
  "cSpell.words": [
    "adkim",
    "afrf",
    "aspf",
    "BIMI",
    "bounceback",
    "crowdstrike",
    "DNSSEC",
    "domaincheckup",
    "dotenv",
    "EHLO",
    "elif",
    "endfor",
    "Fastmail",
    "FEFF",
    "HELO",
    "HSTS",
    "Mailchimp",
    "noindex",
    "referrerpolicy",
    "selectattr",
    "STARTTLS",
    "stylesheet",
    "TLSA",
    "TLSRPT",
    "urlset",
    "Valimail",
    "venv",
    "webmail",
    "webp",
    "ZWNJ",
    "ZWSP"
  ]
}
